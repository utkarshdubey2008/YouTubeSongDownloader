{
  "name": "TelegramBot",
  "description": "Telegram Bot for downloading YouTube songs",
  "repository": "https://github.com/your-username/your-repository",
  "stack": "heroku-20",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "API_ID": {
      "description": "API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "API Hash from my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "scripts": {
    "worker": "python YoutubeSongDownloader.py"
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  }
}
